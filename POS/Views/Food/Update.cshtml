@{
    Layout = "_Layout";
}

<div>
   <a href="/food/@Model.Id/details">@Model.Name</a>
    <form action="/food/@Model.Id/update" method="post">
        <div class="form-group">
            <label for="new-name">Name:</label>
            <input type="text" name="new-name" value="@Model.Name" required>
        </div>
        <div class="form-group">
            <p>Category</p>
            <select name="newCategoryId">
                <option value=0>None</option>
                @foreach (var food in Model.GetAllFoods())   // ######### change so that category can be edited
                {
                    @if (!(Model.GetFoods().Contains(food)))
                    {
                        <option value="@food.Id">@food.Name</option>
                    }
                }
            </select>
        </div>
        <button type="submit">Update</button>
    </form>
</div>