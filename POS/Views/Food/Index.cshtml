<div>
    <div>
        <p>
            <a href="/stylist/add">Add New Food Item</a>
            <span>|</span>
            <a href="/stylist/confirm">Delete Food Items</a> @*delete all confirm page*@
        </p>
    </div>
</div>
<div class="row">
    @{
    foreach (var food in Model)
    {
    <div class="col-md-2">
        <strong><a href="/food/@food.Id/details">@food.Name</a></strong>
    </div>
    <div>
        <strong>@food.Price</strong>
    </div>
    <div>
        <small><a href="/food/@food.Id/Update">Update</a></small><span> | </span>
    </div>
    <div>
        <small><a href="/food/@food.Id/delete">Delete</a></small>
    </div>
    <div class="col-md-9"></div>
    <hr />
    }
    }
</div>