@{
    Layout = "_Layout";
    ViewData["Title"] = "Drink Home";
}

<div>
    <div>
        <p>
            <a href="/drink/add">Add New Drink Item</a>
            <span>|</span>
            <a href="/drink/confirm">Delete All Drink Items</a>  @*// unnecessary?*@
        </p>
    </div>
</div>
<div class="row">
    @{
    foreach (var drink in Model)
    {
    <div class="col-md-2">
        <strong><a href="/drink/@drink.Id/details">@drink.Name</a></strong>
    </div>
    <div>
        <strong>@drink.Price</strong>
    </div>
    <div>
        <small><a href="/drink/@drink.Id/Update">Update</a></small><span> | </span>
    </div>
    <div>
        <small><a href="/drink/@drink.Id/delete">Delete</a></small>
    </div>
    <div class="col-md-9"></div>
    <hr />
    }
    }
</div>




<div>
    <div>
        <p>
            <a href="/drink/add">Add New Food Item</a>
            <span>|</span>
            <a href="/drink/confirm">Delete Drink Items</a> @*delete all confirm page*@
        </p>
    </div>
</div>


<ul class="food-container">

    
@foreach (var food in Model)
{
  <li class="food-item"><a href="/foods/@food.Id/details">@food.Name</a></li>
}

</ul>