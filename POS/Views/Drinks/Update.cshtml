@{
    Layout = "_Layout";
}

<div>
    <a href="/drinks/@Model.Id/details">@Model.Name</a>
    <form action="/drinks/@Model.Id/update" method="post">
        <div class="form-group">
            <label for="new-name">Name:</label>
            <input type="text" name="new-name" value="@Model.Name" required>
        </div>
        <div class="form-group">
            <p>Category</p>
            <select name="newCategoryId">
                <option value=0>None</option>
                @foreach (var drinks in Model.GetAllDrinks())   // ######### change so that category can be edited
                {
                @if (!(Model.GetDrinks().Contains(drinks)))
                {
                <option value="@drinks.Id">@drinks.Name</option>
                }
                }
            </select>
        </div>
        <button type="submit">Update</button>
    </form>
</div>